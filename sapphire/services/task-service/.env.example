# Task Service Environment Variables - Example Template
# Copy this file to .env and update with your actual values

# ===========================
# Application Settings
# ===========================
APP_NAME="Task Management Service"
VERSION="1.0.0"
DEBUG=false
ENVIRONMENT=development

# ===========================
# Database Configuration
# ===========================
# Main database connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:password@db:5432/taskdb

# Test database connection string (used for running tests)
TEST_DATABASE_URL=postgresql://postgres:password@db:5432/taskdb_test

# ===========================
# API Configuration
# ===========================
# API route prefix (e.g., /api/v1)
API_PREFIX=/api/v1

# Pagination limits
MAX_PAGE_SIZE=100
DEFAULT_PAGE_SIZE=20

# ===========================
# Logging Configuration
# ===========================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format: text or json
LOG_FORMAT=text

# ===========================
# CORS Settings
# ===========================
# Allowed origins for CORS (comma-separated list or JSON array)
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# Allow credentials in CORS requests
CORS_CREDENTIALS=true

# Allowed HTTP methods
CORS_METHODS=["GET","POST","PUT","DELETE","OPTIONS"]

# Allowed headers
CORS_HEADERS=["*"]

# ===========================
# Security (Future Use)
# ===========================
# SECRET_KEY=your-secret-key-here
# JWT_SECRET=your-jwt-secret-here
# JWT_ALGORITHM=HS256
# ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===========================
# External Services (Future Use)
